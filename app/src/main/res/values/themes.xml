<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Parcial" parent="Theme.MaterialComponents.DayNight.NoActionBar" >
        <item name="itemBackground">@color/white</item>
        <item name="itemTextColor">@color/fickle_black</item>
        <item name="backgroundColor">@color/white</item>
        <item name="colorPrimary">@color/fickle_light_blue</item>
        <item name="colorPrimaryDark">@color/fickle_blue</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ProfileMenuTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="itemIconTint">@color/fickle_black</item>
        <item name="colorOnSurface">@color/fickle_black</item>
        <item name="colorPrimary">@color/fickle_light_blue</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/fickle_grey</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/fickle_blue</item>
        <item name="colorOnSurfaceVariant">@color/fickle_blue</item>
    </style>

    /****************************************************************************/

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">24dp</item>
    </style>

    /****************************************************************************/

    <style name="ThemeOverlay.MaterialComponents.TextInputLayout" parent="ThemeOverlay.MaterialComponents.Light">

        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <!-- Estilo para la superposiciÃ³n del AppBar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>


</resources>


